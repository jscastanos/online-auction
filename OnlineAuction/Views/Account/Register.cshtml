<script src="~/Scripts/ngRegister.js"></script>
<!-- Main content -->
<div class="content-wrapper" ng-controller="Registration">
    <!-- Content area -->
    <div class="content pb-20">

        <div class="panel login-form width-400">

            <div class="text-center">
                <div class="icon-object border-success text-success"><i class="icon-plus3"></i></div>
                <h5 class="content-group">Create new account <small class="display-block">All fields are required {{testdis}}</small></h5>
            </div>
            <div class="panel-body">
                <div class="tabbable">
                    <ul class="nav nav-tabs nav-tabs-bottom nav-justified">
                        <li class="active"><a href="#bottom-justified-tab1" data-toggle="tab">User</a></li>
                        <li><a href="#bottom-justified-tab2" data-toggle="tab">Company</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="bottom-justified-tab1">
                            <div id="registerDiv" class="tab-content panel-body front">
                                <div class="tab-pane active">
                                    <form ng-submit="addUser(adata)" novalidate="novalidate">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group has-feedback has-feedback-left">

                                                    <input type="text" class="form-control" ng-model="adata.FirstName" name="FirstName" placeholder="First Name" required>
                                                    <div class="form-control-feedback">
                                                        <i class="icon-user-check text-muted"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group has-feedback has-feedback-left">

                                                    <input type="text" class="form-control" ng-model="adata.LastName" name="lastname" placeholder="Last Name" required>
                                                    <div class="form-control-feedback">
                                                        <i class="icon-user-check text-muted"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="number" class="form-control" max="11" ng-model="adata.ContactNo" name=" contact" placeholder="Contact Number" required>
                                            <div class="form-control-feedback">
                                                <i class=" icon-phone text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="text" class="form-control" name="Address" ng-model="adata.Address" placeholder=" Current address" required>
                                            <div class="form-control-feedback">
                                                <i class="icon-location4 text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="date" class="form-control" name="Birthday" ng-model="adata.Birthday" placeholder=" birthday" required>
                                            <div class="form-control-feedback">
                                                <i class="icon-user-check text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="text" class="form-control" name="Occupation" ng-model="adata.Occupation" placeholder="Occupation" required>
                                            <div class="form-control-feedback">
                                                <i class="icon-location4 text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="text" class="form-control" name="UserName" ng-model="adata.UserName" placeholder=" Username" required>
                                            <div class="form-control-feedback">
                                                <i class="icon-user text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="password" class="form-control" name="Password" ng-model="adata.Password" placeholder=" Create password" required>
                                            <div class="form-control-feedback">
                                                <i class="icon-lock2 text-muted"></i>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn bg-blue btn-block form-group">Register <i class="icon-circle-right2 position-right"></i></button>
                                        <div class="content-divider text-muted form-group"><span>Already have an account?</span></div>
                                        <a href="@Url.Content("~/Account/Login")" class="btn btn-default btn-block content-group">Go to Login</a>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="bottom-justified-tab2">
                            <div id="registerDiv" class="tab-content panel-body front">
                                <div class="tab-pane active">
                                    <form ng-submit="addCom(xdata)" novalidate="novalidate">
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="text" class="form-control" name="BranchName" ng-model="xdata.BranchName" placeholder="Company Name" required>
                                            <div class="form-control-feedback">
                                                <i class=" icon-office text-muted"></i>
                                            </div>
                                        </div>

                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="text" class="form-control" name="Address" ng-model="xdata.Address" placeholder="Current Address" required>
                                            <div class="form-control-feedback">
                                                <i class=" icon-location4 text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="number" class="form-control" max="11" name="Contact" ng-model="xdata.BranchContactNo" placeholder="Contact Number" required>
                                            <div class="form-control-feedback">
                                                <i class=" icon-phone text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="text" class="form-control" name="UserName" ng-model="xdata.EmailAddress" placeholder="Email" required>
                                            <div class="form-control-feedback">
                                                <i class="icon-mention text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="text" class="form-control" name="UserName" ng-model="xdata.Username" placeholder="Username" required>
                                            <div class="form-control-feedback">
                                                <i class="icon-user-check text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback has-feedback-left">
                                            <input type="password" class="form-control" name="Password" ng-model="xdata.Password" placeholder="Create Password" required>
                                            <div class="form-control-feedback">
                                                <i class="icon-user-check text-muted"></i>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn bg-blue btn-block form-group">Register <i class="icon-circle-right2 position-right"></i></button>
                                        <div class="content-divider text-muted form-group"><span>Already have an account?</span></div>
                                        <a href="@Url.Content("~/Account/Login")" class="btn btn-default btn-block content-group">Go to Login</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

