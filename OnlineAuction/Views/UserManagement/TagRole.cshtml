
@{
    ViewBag.Title = "TagRole";
}
<style>
a {
  color: hotpink;
}
</style>
<script src="~/Scripts/ngtRole.js"></script>
<div ng-controller="tManagement">
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-bag position-left"></i> <span class="text-semibold">Employee</span></h4>
                <a class="heading-elements-toggle"><i class="icon-more"></i></a>
            </div>


        </div>
    </div>

    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-body no-padding-bottom">

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <div class="has-feedback has-feedback-left">
                                <input style="width:100%;" ng-model="sdata" ng-change="testsearch(sdata)" id="searchinput" class="form-control" type="text" placeholder="Search Employee" />
                                <div class="form-control-feedback">
                                    <i class="icon-search4 text-size-large text-muted"></i>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-md-offset-1 mb-20">
                        <span class="text-semibold">
                            <button type="button" class="btn bg-teal-400 btn-block text-size-large text-uppercase" data-toggle="modal" ng-click="rdata()">
                                <i class="icon-new-tab2"></i>&nbsp;New User
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-flat">
            <div class="panel-body no-margin no-padding">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="bg-teal-400">
                                <td>#</td>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Birthday</th>
                                <th>Position</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="i in alldata">
                                <td>{{$index+1}}</td>
                                <td>{{i.ConcatName| uppercase}}</td>
                                <td>{{i.Address| uppercase}}</td>
                                <td>{{i.Bdate | date:'MMM dd, yyyy' }}</td>
                                <td>{{i.Position| uppercase}}</td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-sm btn-icon" data-toggle="modal" ng-click="editName(i)"><i class="icon-pencil"></i></button>
                                    <button type="button" class="btn btn-danger btn-sm btn-icon" ng-click="openModal(i)"><i class="icon-trash"></i></button>
                                </td>

                                @*<td>{{i.amount  | absolute | number:2}}</td>*@
                                @*<td {{i.tag == 1? 'bg-danger': i.tag == 0 ? 'bg-success': ''}}>{{i.tag == 1? "WITHDRAW" :"DEPOSIT"}}</td>*@
                                @*<td>
                                        <span ng-show="x.isRemoved == 1" class="text-italic" style="border:1px dashed #888;text-decoration:line-through; color: #888; padding: 4px 6px;">Removed</span>
                                        <button ng-show="!x.isRemoved" style="padding: 4px 7px;" type="button" class="btn btn-success btn-sm btn-icon" data-toggle="modal" data-target="#Edit" ng-click="editName(x)"><i class="icon-pencil"></i></button>
                                        <button ng-show="!x.isRemoved" style="padding: 4px 7px;" type="button" class="btn btn-danger btn-sm btn-icon" ng-click="openModal(x)"><i class="icon-bin2"></i></button>
                                        <span ng-show="!x.isRemoved" ng-click="viewDetail(x)" style="cursor:pointer" data-toggle="tooltip" title="Details" class="ml-5"><i class="icon-question3"></i></span>
                                    </td>*@
                            </tr>
                            <tr ng-if="lengthdata== 0">
                                <td colspan="5" class="text-center text-muted text-italic text-semibold">NO RESULT FOUND</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div id="tMgt" class="modal fade">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <form ng-submit="addUsr(empList.EmpId)">
                    <div class="modal-header bg-success">
                        <button type="button" class="close" ng-click="refresh()" data-dismiss="modal">&times;</button>
                        <h6 class="modal-title">
                            <i class="icon-add-to-list"></i> Role
                        </h6>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12 col-xs-12">
                                <div class="row mt-10">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="input-group" style="width:100%">
                                                <angucomplete id="personalName"
                                                              placeholder="Employee Name"
                                                              pause="100"
                                                              searchstr="{{adata.FirstName}}"
                                                              searchvar="ConcatName"
                                                              selectedobject="personalNameBtn"
                                                              selectedvalue="empList.EmpId"
                                                              selectedvaluefield="EmpId"
                                                              url="../api/UserManagements/tblEmpList"
                                                              titlefield="ConcatName"
                                                              minlength="1"
                                                              inputclass="form-control"
                                                              field-required="true" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <input type="text" ng-model="adata.UserName" placeholder="Username" class="form-control" required>
                                                <span class="input-group-addon"><i class="icon-user"></i></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <input type="password" ng-model="adata.Password" placeholder="Password" class="form-control" required>
                                                <span class="input-group-addon"><i class="icon-user-lock"></i></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <select ng-options="item.RoleId as item.RoleName for item in newItem track by item.RoleId"
                                                        ng-model="adata.RoleId"
                                                        class="form-control" required>
                                                    <option value="" disabled selected class="text-muted"> – POSITION – </option>
                                                </select>
                                                <span class="input-group-addon"><i class="icon-insert-template"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn bg-teal-400" ng-if="add">Save</button>
                        <button type="submit" class="btn bg-teal-400" ng-if="update">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

