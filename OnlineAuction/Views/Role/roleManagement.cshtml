    <div id="theRole" class="modal fade">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <form ng-submit="addRole(adata)">
                    <div class="modal-header bg-success">
                        <button type="button" class="close" ng-click="refresh()" data-dismiss="modal">&times;</button>
                        <h6 class="modal-title">
                            <i class="icon-add-to-list"></i> Role
                        </h6>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12 col-xs-12">
                                <div class="row mt-10">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="icon-insert-template"></i></span>
                                                <input type="text" ng-model="adata.RoleName" maxlength="150" placeholder="Employee/Encoder/Cashier" class="form-control" ng-required="true">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn bg-teal-400" ng-if="add" ng-disabled="adata.RoleName.length <= 4 || adata.RoleName == null ">Save</button>
                        <button type="submit" class="btn bg-teal-400" ng-if="update" ng-disabled="adata.RoleName.length <= 4 || adata.RoleName == null ">Update</button>
                    </div>
                </form>
            </div>
        </div>
