
@{
    ViewBag.Title = "roleManagement";
}
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/ngRoles.js"></script>
<script src="~/Scripts/datepicker.js"></script>
<script src="~/Scripts/kendo/kendo.all.min.js"></script>
<div ng-controller="rManagement">
    <div class="scroll-to-top" ng-if="showScrollToTop" ng-click="scrollToTop()">
        <button type="button" class="btn bg-warning btn-float btn-rounded"><i class="icon-arrow-up16"></i></button>
    </div>
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-bag position-left"></i> <span class="text-semibold">Role</span></h4>
                <a class="heading-elements-toggle"><i class="icon-more"></i></a>
            </div>


        </div>
    </div>

    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-body no-padding-bottom">

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <div class="has-feedback has-feedback-left">
                                <input style="width:100%;" ng-model="sdata" ng-change="testsearch(sdata)" id="searchinput" class="form-control" type="text" placeholder="Search Role" />
                                <div class="form-control-feedback">
                                    <i class="icon-search4 text-size-large text-muted"></i>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-md-offset-1 mb-20">
                        <span class="text-semibold">
                            <button type="button" class="btn bg-teal-400 btn-block text-size-large text-uppercase" data-toggle="modal" ng-click="rdata()" data-target="#Add">
                                <i class="icon-new-tab2"></i>&nbsp;New Role
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-flat">
            <div class="table-responsive" id="tablee" style="min-height:400px;">
                <table class="table table-hover">
                    <thead>
                        <tr class="bg-teal-400">
                            <th>#</th>
                            <th>Role</th>
                            <th class="text-center col-xs-3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in alldata">
                            <td>{{$index+1}}</td>
                            <td>{{x.RoleName}}</td>
                            <td class="text-center">
                                <button type="button" class="btn btn-primary btn-sm btn-icon" data-toggle="modal" ng-click="editName(x)"><i class="icon-pencil"></i></button>
                                <button type="button" class="btn btn-danger btn-sm btn-icon" ng-click="openModal(x)"><i class="icon-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

